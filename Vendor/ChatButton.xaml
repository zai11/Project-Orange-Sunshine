<UserControl x:Class="ProjectOrangeSunshine.Vendor.ChatButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectOrangeSunshine.Vendor"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="80">
    <Grid Name="MainGrid" Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label> </Label>
        <Label Name="DisplayNameLabel" Grid.Row="1" HorizontalContentAlignment="Center">Anonymous User</Label>
        <Label Name="LastSentLabel" Grid.Row="2" HorizontalContentAlignment="Right" FontSize="9">Last Message: 2022/01/16</Label>
    </Grid>
</UserControl>
